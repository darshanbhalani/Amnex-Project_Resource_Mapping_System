@{
    Layout = null;
}

<head>
    <style>
        body {
            overflow: hidden;
        }

        .error-container {
            height: 100vh;
            width: 100vw;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

            .error-container img {
                aspect-ratio: 1/1;
                width: 25vw;
                min-width: 500px;
            }

            .error-container a {
                text-decoration: none;
            }
    </style>
</head>
<div class="container-fluid error-container">
    <img src="~/assets/images/error.png" />
    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Dashboard" id="Index">Click to visit Home Page</a>
</div>