@section Scripts {

    <script>
        console.log("hello");

        var actions = @Html.Raw(Json.Serialize(Model));
        $(document).ready(function () {
            $('#grid').kendoGrid({
                dataSource: {
                    data: actions,
                    pageSize: 10,
                },

                columns: [
                    {
                        field: "description", title: "Action"
                    },
                    {
                        field: "createdTime", title: "Time", width:300
                    }
                ],
                editable: false,
                navigatable: true,
                selectable: "row",
                sortable: true,
                pageable: true,
                pageable: {
                    refresh: true,
                    pageSizes: [10, 25, 50, 100, "all"],
                    buttonCount: 10
                },
                filterable: true,
                toolbar: [
                    "search",
                    "excel",
                    "pdf",
                ],
            });
        });
    </script>
