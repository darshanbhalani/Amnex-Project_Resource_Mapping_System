<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Amnex_Project_Resource_Mapping_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Amnex_Project_Resource_Mapping_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body::-webkit-scrollbar {
            display: none;
        }

        a {
            text-decoration: none;
            color: white !important;
        }

        li > a {
        }

        #main-window {
            height: 100vh;
        }

        .sidebar {
            height: 100vh;
        }

        .btn-section:hover {
            background-color: rebeccapurple;
        }

        .profileBox {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .main-container{
            height:100vh;
            width:100vw;
        }

        .hr-btn-section {
            margin:0 15px 0 15px;
        }

    </style>
</head>
<body>

    <div class="container" style="height:100vh !important; width:100vw !important;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
