@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>PRMS - Project Resource Mapping System</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <link href="img/favicon.ico" rel="icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css" />
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.js"></script>
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/custom-css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/custom-css/style.css" rel="stylesheet" />
    @await RenderSectionAsync("Style", required: false)


    <style>
        .brand-logo {
            height: 50px;
        }

        /*Loader*/
        .spinner-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spinner-border {
            max-height: 20vh;
            max-width: 20vh;
            min-height: 50px;
            min-width: 50px;
        }

    </style>
</head>

<body>
    <div class="container-fluid position-relative bg-white d-flex p-0 m-0">

        @* sidebar *@
        <div class="sidebar pe-4 pb-3" id="sidebar">
            <nav class="navbar bg-transparent navbar-light">
                <a class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary">
                        <img class="brand-logo" src="~/assets/images/prms-logo.png" />
                        PRMS
                    </h3>
                </a>
                <div class="navbar-nav w-100 ">
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Dashboard" id="Dashboard"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Projects" id="Projects"><i class="fa fa-th-large me-2"></i>Projects</a>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Employees" id="Employees"><i class="fa fa-users me-2"></i>Employees</a>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="ProjectEmployeeMapping" id="ProjectEmployeeMapping"><i class="fa fa-american-sign-language-interpreting me-2"></i>Mapping</a>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Departments" id="Departments"><i class="fa fa-braille me-2"></i>Departments</a>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Skills" id="Skills"><i class="fa fa-bolt me-2"></i>Skills</a>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Actions" id="Actions"><i class="fa fa-chart-bar me-2"></i>Actions</a>
                </div>
            </nav>
        </div>

        @* top-navbar *@
        <div class="content" id="navbar">
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-1">
                <a class="sidebar-toggler flex-shrink-0" id="sidebar-toggler">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <span class="d-none d-lg-inline-flex">@HttpContextAccessor.HttpContext!.Session.GetString("userName")</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile" id="Profile"><i class="fa fa-user me-2"></i>Profile</a>
                            <a class="dropdown-item pe-auto" style="cursor:pointer;" id="logout"><i class="bi bi-box-arrow-left me-2" style="font-weight: bold;"></i>Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            @* main-content *@
            <main role="main" class="container-fluid px-5 m-0 p-0 pt-2" id="main-window" style="min-height:550px;">
                @RenderBody()
            </main>
            <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
            <div class="container-fluid pt-4 px-0">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Project Resource Mapping System</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            Managed By <a href="https://www.amnex.com/">Amnex Infotechnologies Pvt. Ltd.</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <script>
        var spinnerVisible = false;

        $(document).ready(function () {

            var activeAction = "@ViewContext.RouteData.Values["action"]";
            $('#' + activeAction).addClass('active');

            // Website loader
            // $('#loader').show();

            // $(window).on('load', function () {
            //     $('#loader').hide();
            // });

            $('#sidebar-toggler').click(function () {
                $('#sidebar,#navbar').toggleClass('open');
            });

            // logout
            $("#logout").click(function (e) {
                $("#logoutModal").modal('show');
            });
            $('#logoutButton').click(function () {
                $("#logoutModal").modal('hide');
                $.ajax({
                    type: 'POST',
                    url: '/Account/Logout',
                    success: function () {
                        if (window.history && window.history.pushState) {
                            window.history.pushState(null, null, window.location.href);
                        } else {
                            window.location.hash = '';
                        }

                        window.location.href = '/Account/Login';
                    },
                    error: function () {
                        alert("Unable to logout...");
                    }
                });
            });

        });


        // snackbar
        function showSnackbar(status, message) {
            console.log("snackbar");
            if (status === "true") {
                $('#snackbar').addClass('bg-success');
            } else {
                $('#snackbar').addClass('bg-danger');
            }
            var snackbar = document.getElementById("snackbar");
            snackbar.textContent = message;
            snackbar.style.display = "block";
            setTimeout(function () { snackbar.style.display = "none"; }, 3000);
        }


        // loading spiner
        function loading() {
            if (!spinnerVisible) {
                $('#loadingModal').modal('show');
                spinnerVisible = true;
            } else {
                $('#loadingModal').modal('hide');
                spinnerVisible = false;
            }
        };
    </script>

</body>
</html>

@* logout-modal *@
<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-small modal-dialog-centered">
        <div class="modal-content" style="border: none;">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Logout</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to Logout?</p>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-danger" id="logoutButton">Logout</button>
                </div>
            </div>
        </div>
    </div>
</div>


@* Website loader *@
<div class="modal" style="background-color: white;" id="loader" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered d-flex justify-content-center align-items-center flex-column">
        <div class="spinner-container">
            <img src="~/assets/images/prms-logo.png" class="position-absolute brand-logo d-inline-block align-text-top p-2 m-0">
            <div class="spinner-border" role="status" style="color:#0a3d62 !important;">
                <span class="position-relative sr-only"></span>
            </div>
        </div>
        <h6 class="pt-2" style="color:dimgray">Please wait...</h6>
    </div>
</div>


@* snackbar *@
<div id="snackbar" class="text-white text-center position-absolute bottom-0 start-50 translate-middle-x p-2 rounded-3 mx-5 mb-4" style="display: none; z-index:1; width:50%">
</div>


@* loading spiner *@
<div class="modal" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="loadingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen">
        <div class="modal-content d-flex justify-content-center align-items-center" style="background-color:rgba(0, 0, 0, 0.5);" >
            <div class="spinner-border text-light" role="status" style="max-height:20vh; max-width:20vh; min-height:40px; min-width:40px;" >
            </div>
        </div>
    </div>
</div>

